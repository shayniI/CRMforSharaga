<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="PCMaster — Учёт клиентов и продаж" Height="700" Width="1100" WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        Foreground="{DynamicResource MaterialDesignBody}">
    <DockPanel>
        <!-- Топбар -->
        <Border DockPanel.Dock="Top" Background="{DynamicResource MaterialDesignCardBackground}" Height="56" Padding="8">
            <DockPanel>
                <TextBlock x:Name="AppTitleText" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center">PCMaster</TextBlock>
                <TextBlock x:Name="UserInfoTextBlock" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Right" DockPanel.Dock="Right" Margin="0,0,8,0"/>
            </DockPanel>
        </Border>

        <!-- Левая панель -->
        <StackPanel DockPanel.Dock="Left" Width="240" Background="{DynamicResource MaterialDesignPaper}" Margin="12,0,0,0">
            <TextBlock Text="Меню" FontWeight="Bold" Margin="4"/>
            <ListBox x:Name="MenuList" BorderThickness="0" Background="Transparent" VerticalAlignment="Stretch">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <!-- растягиваем содержимое по ширине -->
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="Background" Value="Transparent"/>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </StackPanel>

        <!-- Контент -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Margin="12"/>
    </DockPanel>
</Window>